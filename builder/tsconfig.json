    "compilerOptions": {
        "target": "ES2019",
        "lib": ["ESNext", "DOM"],
        "module": "ES2015",
        "sourceMap": true,
        "outDir": "../dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "downlevelIteration": true,
        "moduleResolution": "node"

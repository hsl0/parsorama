{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "${workspaceFolder}\\test\\test.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}\\bin\\**\\*.js"]
        },
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "pwa-msedge",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}\\bin\\**\\*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}\\bin\\**\\*.js"],
            "program": "${file}"
        }
    ]
}